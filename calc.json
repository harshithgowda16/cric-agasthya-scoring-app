{
  "openapi": "3.0.1",
  "info": {
    "title": "Calculator API",
    "description": "A simple calculator API with basic operations",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://calcapi.example.com",
      "description": "Production server"
    }
  ],
  "paths": {
    "/add": {
      "get": {
        "summary": "Add two numbers",
        "parameters": [
          {
            "name": "a",
            "in": "query",
            "required": true,
            "schema": {
              "type": "number"
            }
          },
          {
            "name": "b",
            "in": "query",
            "required": true,
            "schema": {
              "type": "number"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful calculation",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "result": {
                      "type": "number"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/subtract": {
      "get": {
        "summary": "Subtract two numbers",
        "parameters": [
          {
            "name": "a",
            "in": "query",
            "required": true,
            "schema": {
              "type": "number"
            }
          },
          {
            "name": "b",
            "in": "query",
            "required": true,
            "schema": {
              "type": "number"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful calculation",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "result": {
                      "type": "number"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
