      "get": {
        "summary": "Add two numbers",
        "parameters": [
          {
            "name": "a",
            "in": "query",
            "description": "First number",
            "required": true,
            "type": "number"
          },
          {
            "name": "b",
            "in": "query",
            "description": "Second number",
            "required": true,
            "type": "number"
          }
        ],
        "responses": {
