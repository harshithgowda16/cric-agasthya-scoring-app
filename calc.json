{
  "openapi": "3.0.1",
  "info": {
    "title": "Basic Calculator API",
    "version": "1.0.0",
    "description": "A simple calculator API for add, subtract, multiply, divide"
  },
  "servers": [
    {
      "url": "http://httpbin.org", 
      "description": "Placeholder HTTP server"
    }
  ],
  "paths": {
    "/add": {
      "get": {
        "summary": "Add two numbers",
        "parameters": [
          {
            "name": "x",
            "in": "query",
            "schema": { "type": "number" },
            "required": true
          },
          {
            "name": "y",
            "in": "query",
            "schema": { "type": "number" },
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "Addition result",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "result": { "type": "number" }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/subtract": {
      "get": {
        "summary": "Subtract two numbers",
        "parameters": [
          { "name": "x", "in": "query", "schema": { "type": "number" }, "required": true },
          { "name": "y", "in": "query", "schema": { "type": "number" }, "required": true }
        ],
        "responses": {
          "200": {
            "description": "Subtraction result",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "result": { "type": "number" }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/multiply": {
      "get": {
        "summary": "Multiply two numbers",
        "parameters": [
          { "name": "x", "in": "query", "schema": { "type": "number" }, "required": true },
          { "name": "y", "in": "query", "schema": { "type": "number" }, "required": true }
        ],
        "responses": {
          "200": {
            "description": "Multiplication result",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "result": { "type": "number" }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/divide": {
      "get": {
        "summary": "Divide two numbers",
        "parameters": [
          { "name": "x", "in": "query", "schema": { "type": "number" }, "required": true },
          { "name": "y", "in": "query", "schema": { "type": "number" }, "required": true }
        ],
        "responses": {
          "200": {
            "description": "Division result",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "result": { "type": "number" }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
